import React, {useContext} from "react";
import { Route, Redirect, useLocation } from "react-router-dom";

export default function AuthenticatedRoute({ children, ...rest }, props) {
  const { pathname, search } = useLocation();
  const { isAuthenticated } = useContext(props.isAuth);
  return (
    <Route {...rest}>
      {isAuthenticated ? (
        children
      ) : (
        <Redirect to={
          `/login?redirect=${pathname}${search}`
        } />
      )}
    </Route>
  );
}